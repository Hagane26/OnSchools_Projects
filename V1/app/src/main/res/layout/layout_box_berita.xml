<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/box_berita"
    android:layout_width="283dp"
    android:layout_height="78dp"
    android:elevation="20dp"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box_berita.frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#805A97BF">

        <ImageView
            android:id="@+id/box_berita.photo_profile"
            android:layout_width="74dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/gambar_profile_prestasi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/judul_pretasi"
            tools:ignore="TextContrastCheck"
            android:layout_width="149dp"
            android:layout_height="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="4dp"
            android:text="@string/box_berita.judul_prestasi"
            android:textAppearance="@style/roboto.white.Normal.9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/box_berita.photo_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/box_berita.isi_prestasi"
            android:layout_width="105dp"
            android:layout_height="24dp"
            android:layout_below="@+id/judul_pretasi"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/box_berita.photo_profile"
            android:gravity="top"
            android:text="@string/box_berita.isi_prestasi"
            android:textAppearance="@style/roboto.white.Normal.5"
            app:layout_constraintStart_toStartOf="@+id/judul_pretasi"
            app:layout_constraintTop_toBottomOf="@+id/judul_pretasi"
            tools:ignore="TextContrastCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>