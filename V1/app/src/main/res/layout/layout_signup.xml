<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru_laut">

    <RelativeLayout
        android:id="@+id/layout_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_bg_signup">

        <LinearLayout
            android:id="@+id/group_tbx_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp">

            <EditText
                android:id="@+id/tbx_nama_depan"
                android:layout_width="115dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/biru_laut"
                android:hint="@string/nama_depan"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textAlignment="center"
                android:textAppearance="@style/tbx_nama"
                android:textColorHint="@color/biru_laut"
                tools:ignore="SpeakableTextPresentCheck,TextContrastCheck" />

            <EditText
                android:id="@+id/tbx_nama_belakang"
                android:layout_width="115dp"
                android:layout_height="48dp"
                android:layout_marginStart="26dp"
                android:backgroundTint="@color/biru_laut"
                android:hint="@string/nama_belakang"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textAlignment="center"
                android:textAppearance="@style/tbx_nama"
                android:textColorHint="@color/biru_laut"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_tbx_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_tbx_nama"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/icon_email"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginVertical="13dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_icon_email" />

            <EditText
                android:id="@+id/tbx_email"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:layout_marginStart="-32dp"
                android:backgroundTint="@color/biru_laut"
                android:hint="@string/email"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="36dp"
                android:textAlignment="textStart"
                android:textAppearance="@style/tbx_nama"
                android:textColorHint="@color/biru_laut"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <TextView
            android:id="@+id/contoh_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_tbx_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5dp"
            android:text="Contoh: onschool@gmail.com"
            android:textAppearance="@style/contoh_email" />

        <LinearLayout
            android:id="@+id/group_tbx_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contoh_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/icon_username"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginVertical="13dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_icon_username" />

            <EditText
                android:id="@+id/tbx_username"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:layout_marginStart="-32dp"
                android:backgroundTint="@color/biru_laut"
                android:hint="@string/username"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingHorizontal="36dp"
                android:textAlignment="textStart"
                android:textAppearance="@style/tbx_nama"
                android:textColorHint="@color/biru_laut"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_tbx_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_tbx_username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/icon_pass"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginVertical="13dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_icon_pass" />

            <EditText
                android:id="@+id/tbx_password_signup"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:layout_marginStart="-32dp"
                android:backgroundTint="@color/biru_laut"
                android:hint="@string/password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingHorizontal="36dp"
                android:textAlignment="textStart"
                android:textAppearance="@style/tbx_nama"
                android:textColorHint="@color/biru_laut"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="170dp"
            android:layout_height="46dp"
            android:layout_below="@+id/group_tbx_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_btn_register_layout_signup"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/or_login_with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="@string/or_login_with" />

        <LinearLayout
            android:id="@+id/icon_sosmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/or_login_with"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_google"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_icon_google"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btn_twitter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/ic_icon_twitter"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btn_fb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/ic_icon_fb"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>